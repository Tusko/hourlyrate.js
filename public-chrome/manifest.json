{
  "manifest_version": 3,
  "name": "hourlyrate",
  "description": "Helps you to convert hours to USD and UAH",
  "version": "1.2.2",
  "author": "Tusko Trush",
  "homepage_url": "https://hourlyrate.frontend.im/",

  "action": {
    "default_popup": "index.html",
    "default_title": "hourlyrate",
    "default_icon": {
      "16": "favicon-16x16.png",
      "32": "favicon-32x32.png",
      "48": "android-chrome-48x48.png",
      "128": "android-chrome-144x144.png"
    }
  },
  "icons": {
    "16": "favicon-16x16.png",
    "48": "android-chrome-48x48.png",
    "128": "android-chrome-144x144.png"
  },
  "permissions": ["clipboardWrite"]
}
